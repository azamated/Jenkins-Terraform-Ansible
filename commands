#Install Jenkins on the local admin machine
apt update
apt install default-jdk-headless (default-jdk)
wget -q -O - https://pkg.jenkins.io/debian/jenkins.io.key | sudo apt-key add -
sh -c 'echo deb http://pkg.jenkins.io/debian-stable binary/ > /etc/apt/sources.list.d/jenkins.list'
add-apt-repository universe
apt-get update
apt-get install jenkins -y
less /var/lib/jenkins/secrets/initialAdminPassword

#Generate SSH key pair
ssh-keygen

#Jenkins from Docker
docker run -d -v jenkins_home:/var/jenkins_home -p 8080:8080 -p 50000:50000 jenkins/jenkins:lts

#Terraform
https://releases.hashicorp.com/terraform/0.11.14/terraform_0.11.14_linux_amd64.zip

#Ansible
apt install ansible

#AWS cli
apt install awscli
aws configure

#Jenkins plugins
- Ansible
- Terraform

#Install python-pip and boto --required for AWS CLI
apt install -y python3-pip
pip3 install boto
pip3 install boto3
pip3 install docker

#Export variables in the Jenkins machine
export TF_VAR_aws_access_key="***"
export TF_VAR_aws_secret_key="***"

